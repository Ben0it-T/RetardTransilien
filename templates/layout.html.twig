{% set navigation_bar = [['declareIncident', 'Déclarer'], ['consultData', 'Données'], ['exportData', 'Exporter'], ['about', 'A propos'] ] %}
{% set active_page = active_page|default('declareIncident') %}
<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">

    <meta name="robots" content="index, follow" >
    <meta name="description" content="{% block description %}{% endblock %}" >
    <meta name="author" lang="fr" content="Benoit TISSOT" >

    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" type="image/x-icon" />
             <link rel="icon" href="{{ asset('favicon.ico') }}" type="image/x-icon" />

    <title>{% block title %}{% endblock %} | ben0it.fr</title>
    

    <!-- Bootstrap -->
    <link href="{{ asset('/lib/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('/css/theme.css') }}" rel="stylesheet">

    <!-- js -->
    {% block headerscript %}{% endblock %}
     

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="{{ asset('/lib/html5shiv/html5shiv-3.7.3.min.js') }}"></script>
      <script src="{{ asset('/lib/respond/respond-1.4.2.min.js') }}"></script>
    <![endif]-->

</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ app.url_generator.generate('declareIncident') }}">{% block navbarbrand %}{% endblock %} </a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        {% for item in navigation_bar %}
                        <li{% if item[0] == active_page %} class="active"{% endif%}><a href="{{ app.url_generator.generate(item[0]) }}">{{item[1]}}</a></li>
                        {% endfor %}
                    </ul>
                </div><!--/.nav-collapse -->
            </div><!-- /.container -->
        </nav>

        <div id="content">
            {% block content %}{% endblock %}
        </div>

        
        <footer class="footer">
            <div class="container-fluid" style="">
                <hr>
                <p class="text-muted small">Vous savez quoi ? ce site utilise exclusivement des cookies dits <em>strictement nécessaires</em> !</p>
            </div>
        </footer>

    </div>

    <script src="{{ asset('/lib/jquery/jquery-1.12.4.min.js') }}"></script>
    <script src="{{ asset('/lib/bootstrap/js/bootstrap.min.js') }}"></script>
    {% block footerscripts %}{% endblock %}

</body>
</html>